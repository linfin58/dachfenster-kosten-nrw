---
import "../styles/base.css";
const { title = "Dachfenster NRW" } = Astro.props;

/*  ▼  Array aller Unterseiten (Dateiname ohne .md & Link‑Titel)  */
const navPages = [
  ["dachfenster-uwert-berechnen",          "U‑Wert berechnen"],
  ["kondenswasser-verhindern-dachfenster", "Kondenswasser verhindern"],
  ["dachfenster-foerderung-nrw-2025",      "Förderung NRW 2025"],
  ["innenfutter-selber-tauschen",          "Innenfutter tauschen"],
  ["einbau-aufkeilrahmen-vorteile",        "Aufkeilrahmen Vorteile"],
  // ►► hier deine restlichen 15 Dateinamen ergänzen ◄◄
];
---
<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>

  <body>
    <!-- ▸ Kopfzeile mit Hamburger ◂ -->
    <header class="site-header">
      <button id="menuToggle" aria-label="Menü öffnen / schließen">☰</button>
      <h1 class="site-title"><a href="/">Dachfenster NRW</a></h1>
    </header>

    <!-- ▸ seitliches Navigationsmenü ◂ -->
    <nav id="sideMenu">
      <ul>
        <li><strong>Praxis‑Artikel</strong></li>
        {navPages.map(([slug, label]) => (
          <li><a href={`/${slug}`}>{label}</a></li>
        ))}
      </ul>
    </nav>

    <!-- ▸ Hauptspalte + Werbespalte ◂ -->
    <div class="page-wrap">
      <main><slot /></main>

      <aside class="ad-slot">
        <!-- Platzhalter – hier später AdSense‑Code einfügen -->
        <div class="ad-placeholder">Anzeige 300 × 600</div>
      </aside>
    </div>

    <footer>
      © 2025 | <a href="/impressum">Impressum</a> · <a href="/datenschutz">Datenschutz</a>
    </footer>

    <script src="/menu.js" defer></script>
  </body>
</html>
