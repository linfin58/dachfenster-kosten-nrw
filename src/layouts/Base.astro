    <!-- linke Scroll‑Leiste -->
    <aside class="side-nav" id="sideNav">
      <strong>Praxis‑Artikel</strong>
      <nav>
        {menu.map(item => <a href={item.slug}>{item.label}</a>)}
      </nav>
    </aside>

    <AdBanner slot="in-article" format="auto" fullWidth />

    <!-- rechte Werbespalte -->
<aside class="sidebar">
  <AdBanner slot="sidebar" format="rectangle" />
</aside>

  <!-- ▸ ❹  Fußzeile ----------------------------------------------------------- -->
  <footer>
<AdBanner slot="footer" format="horizontal" fullWidth />
    © 2025 · <a href="/impressum">Impressum</a> | <a href="/datenschutz">Datenschutz</a>
  </footer>

  <!-- ▸ ❺  kleines JS für Burger/Sidenav -------------------------------------- -->
  <script>
    document.getElementById("burger").onclick = () =>
      document.getElementById("sideNav").classList.toggle("open");
  </script>
</body>
</html>

