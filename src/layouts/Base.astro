---
/*  Front‑Matter  (zwischen den --- Zeilen)  */
/*  HIER NICHTS MEHR LÖSCHEN!                */
import "../styles/base.css";
const { title = "Dachfenster NRW" } = Astro.props;

import AdBanner from "../components/AdBanner.astro";
const menu = [
  { slug: "/",                                    label: "Dachfenster austauschen – Kosten 2025" },
  { slug: "/baugenehmigung-dachfenster-nrw",      label: "Baugenehmigung Dachfenster?" },
  { slug: "/dachfenster-einbruchschutz-klasse",   label: "Einbruchschutz – RC2 Nachrüstsatz" },
  { slug: "/dachfenster-energetischer-nachweis",  label: "Energetischer Nachweis" },
  { slug: "/dachfenster-foerderung-nrw-2025",     label: "Förderung NRW 2025" },
  { slug: "/dachfenster-pflegen-alu-holz",        label: "Dachfenster richtig pflegen" },
  { slug: "/dachfenster-steuerbonus-§35c",        label: "Steuerbonus §35c – 20 %" },
  { slug: "/dachfenster-umruesten-vs-neubau",     label: "Nachrüsten vs. Neubau" },
  { slug: "/u-wert-berechnen",                    label: "U‑Wert berechnen" },
  { slug: "/denkmalschutz-dachfenster",           label: "Denkmalschutz – Regeln" },
  { slug: "/aufkeilrahmen-vorteile",              label: "Aufkeilrahmen Vorteile" },
  { slug: "/hagelschutzfolie-procontra",          label: "Hagelschutzfolie – Pro / Contra" },
  { slug: "/innenfutter-selber-tauschen",         label: "Innenfutter tauschen" },
  { slug: "/kfw-261-dachflaechenfenster",         label: "KfW 261 für Dachfenster" },
  { slug: "/kondenswasser-verhindern-dachfenster",label: "Kondenswasser verhindern" },
  { slug: "/kostenvergleich-kalkulator-3-fenster",label: "Kosten‑Kalkulator (3 Fenster)" },
  { slug: "/pcb-belastung-altes-dachfenster",     label: "PCB Belastung – Altes Dachfenster" },
  { slug: "/rollladen-vs-hitzeschutzmarkise",     label: "Rollladen vs. Hitzeschutzmarkise" },
  { slug: "/schallschutzklasse-dachfenster",      label: "Schallschutzklassen Tabelle" },
  { slug: "/smart-home-steuerung-velux-active",   label: "VELUX Active im Test" }
];
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <!-- Google AdSense Grund‑Skript (GENAU EINMAL pro Seite laden) -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2438324761912025 "
            crossorigin="anonymous"></script>

    <!-- Bestehende Meta‑Tags, CSS usw. -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>

  <body>
    <!-- ▸ Kopfbereich -->
    <header class="site-header">
      <button id="burger" aria-label="Menü öffnen">☰</button>
      <h1><a href="/">Dachfenster NRW</a></h1>
    </header>

    <!-- ▸ Flex‑Layout:   | Sidebar | Inhalt | Rechte Ad‑Spalte | -->
    <div class="layout">
      <!-- linke Scroll‑Leiste -->
      <aside class="side-nav" id="sideNav">
        <strong>Praxis‑Artikel</strong>
        <nav>
          {menu.map(item => <a href={item.slug}>{item.label}</a>)}
        </nav>
      </aside>

      <!-- Haupt‑Inhalt -->
      <main>
        <slot />
        <!-- Anzeige im Textfluss (wide responsive) -->
        <AdBanner slot="in‑article" format="auto" fullWidth />
      </main>

      <!-- Rechte Spalte -->
      <aside class="sidebar">
        <AdBanner slot="sidebar" format="rectangle" />
      </aside>
    </div>

    <!-- ▸ Fußzeile -->
    <footer>
      <AdBanner slot="footer" format="horizontal" fullWidth />
      © 2025 • <a href="/impressum">Impressum</a> • <a href="/datenschutz">Datenschutz</a>
    </footer>

    <!-- Burger‑Menü JS -->
    <script is:inline>
      document.getElementById("burger").onclick = () =>
        document.getElementById("sideNav").classList.toggle("open");
    </script>
  </body>
</html>

